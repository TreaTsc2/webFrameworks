extends layout

include _includes/sharedHTMLfunctions




block content

  .row.banner
    .col-12
      h1= pageHeader.title
        small &nbsp;#{pageHeader.strapline}
  .row
    .col-12.col-md-8
      each cinema in cinemas
        .card
          .card-block
            h4
              a= cinema.name
              small &nbsp;
            span.badge.badge-pill.badge-default.float-right= cinema.distance
            p.location= cinema.location

    .col-12.col-md-4
      p.lead= sidebar
